        <record id="sp_shop_mobile_app_plan_view_tree" model="ir.ui.view">
            <field name="name">Shopify Mobile App Shop Plan Tree</field>
            <field name="model">s.shopify.mobile.app.plan</field>
            <field name="arch" type="xml">
                <tree string="Shopify Mobile App Shop Plan">
                    <field name="sp_shop_id" string="SP Shop" groups="base.group_system"/>
                    <field name="display_name"/>
                    <field name="current_plan"/>
                    <field name="price"/>
                </tree>
            </field>
        </record>

        <record id="sp_shop_mobile_app_plan_action_server_form" model="ir.actions.server">
            <field name="name">Pricing Plan</field>
            <field name="model_id" ref="s_shopify_mobile_app.model_s_shopify_mobile_app_plan"/>
            <field name="binding_view_types">form</field>
            <field name="state">code</field>
            <field name="code">action = model.open_mobile_app_shop_plan()</field>
        </record>


        <menuitem name="Account" id="s_shopify_mobile_app.menu_shopify_mobile_app_plan" sequence="3"
                  action="sp_shop_mobile_app_plan_action_server_form"
                  parent="s_shopify_mobile_app.menu_shopify_mobile_app_root"/>

        <template id="redirect_top" name="Redirect Top Page">
            <script>
                window.top.location.href = '<t t-raw="redirect_url"/>';
            </script>
        </template>

    </data>
</odoo>